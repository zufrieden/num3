<!DOCTYPE html>
<html lang="{% block language '' %}">
<head>
  <meta charset="utf-8">
  <title>{% block title '' %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{% block meta_description '' %}">
  <meta name="author" content="{% block meta_keyword '' %}">
  <link href="/assets/css/style.css" rel="stylesheet" type="text/css">
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

  <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

</head>

<body>
  <section class="plan bg-fix">
    <div class="square"></div>
    <div class="square-shadow"></div>
    <header id="navigation">
      <h1 class="logo">
        <img src="/assets/img/logo.svg" onerror="this.onerror=null; this.src='assets/img/logo.png'" alt="Numéro3">
        <strong>Numéro3</strong>
      </h1>
      <p>{% block intro %}{% endblock %}</p>
      <ul class="nav-num3">
        <li><a href="#offre">{% block offre_menu '' %}</a></li>
        <li><a href="#tarifs">{% block tarif_menu '' %}</a></li>
        <li><a href="#contact">{% block contact_menu '' %}</a></li>
      </ul>
      <div class="social-options isolated">
        <a href="http://www.facebook.com/pages/Num3/633533630046752" class="btn"><i class="fa fa-facebook-square"></i> Facebook</a>
        <a href="https://twitter.com/num3_coworking" class="btn"><i class="fa fa-twitter-square"></i> Twitter</a>
        {# <a href="#" class="btn"><i class="fa fa-linkedin-square"></i> LinkedIn</a> #}
      </div>
      {% block language_switch %}
      <div class="nav-language">
        <ul class="nav nav-pills">
          <li class="{% block active_fr '' %}"><a href="{{ path('homepage_fr') }}">FR</a></li>
          <li class="{% block active_en '' %}"><a href="{{ path('homepage_en') }}">EN</a></li>
        </ul>
      </div>
      {% endblock %}
    </header>
  </section>
  <div id="content">
    <section class="highlight">
      <div class="container">
        <div class="row">
          <div class="span6">
            {% block highlight_text %}
            {% endblock %}
          </div>
          <div class="span6">
            <div id="fb-root"></div>
            <script>(function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=339731606059889";
              fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>
            <div class="fb-like-box" style="background-color:#fff;" data-href="https://www.facebook.com/pages/Num3/633533630046752" data-width="500" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="true" data-show-border="false"></div>
          </div>
        </div>
      </div>
    </section>

    <section class="view bg-fix">

    </section>

    <section class="with-title" id="offre">
      <div class="title"><h1>{% block offre_title %}{% endblock %}</h1></div>
      <div class="container">
        <div class="row-fluid">
          <div class="span12">
            <h3 class="text-center">{% block offre_intro %}{% endblock %}</h3>
          </div>
        </div>
        <div class="row-fluid isolated">
          <div class="span6">
            {% block offre_checklist %}
            {% endblock %}
          </div>
          <div class="span6">
            {% block offre_checklist_suite %}
            {% endblock %}
          </div>
        </div>
      </div>
    </section>

    <section class="detente bg-fix">

    </section>

    <section class="simple-highlight with-title" id="tarifs">
      <div class="title"><h1>{% block tarifs_titre %}{% endblock %}</h1></div>
      <div class="container">
        <div class="row-fluid isolated">
          <div class="span6 text-center">
            {% block tarifs_prix %}{% endblock %}
          </div>
          <div class="span6">
            {% block tarifs_suite %}{% endblock %}
          </div>
        </div>

      </div>
    </section>



    <section id="plans" class="map">
      <div class="map_info_box rotade-box">
        <div class="rotade-box-content">
          <div class="rotade-box-centered-content text-center isolated">
            <h4>{% block adresse_titre %}{% endblock %}</h4>

            {% block adresse_contenu %}{% endblock %}
          </div>
        </div>
      </div>
      <div id="map_canvas" style="width:100%; height:500px;"></div>
    </section>
    <!-- -->
    <section class="with-title with-bigger-title contact" id="contact">
      <div class="title"><h1>{% block contact_titre %}{% endblock %}</h1></div>
      <div class="container isolated">
        <div class="row-fluid isolated vcard">
          <div class="span3 offset3">
            <img src="/assets/img/nath.jpg" alt="" class="bordered-image desktop-right-image" width="60%">
          </div>
          <div class="span4">
            {% block contact_contenu %}{% endblock %}
          </div>
        </div>
      </div>



    </section>
  </div>
  <script src="/assets/bower_components/jquery/jquery.min.js"></script>
  <script src="/assets/bower_components/jquery.scrollTo/jquery.scrollTo.min.js"></script>
  <script src="/assets/bower_components/jquery.localScroll/jquery.localScroll.js"></script>

  <script src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
  <script src="/assets/js/app.js"></script>



</body>
</html>
